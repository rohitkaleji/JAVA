public class StringFunctions {

    public static void main(String[] args) {
        String str = "Hello, World!";

        // Length of the string
        System.out.println("Length of the string: " + str.length());

        // Character at a specified index
        System.out.println("Character at index 5: " + str.charAt(5));

        // Concatenating two strings
        String str1 = "Hello";
        String str2 = "World";
        String concatenatedString = str1.concat(" " + str2);
        System.out.println("Concatenated string: " + concatenatedString);

        // Converting to uppercase
        String uppercaseString = str.toUpperCase();
        System.out.println("Uppercase string: " + uppercaseString);

        // Converting to lowercase
        String lowercaseString = str.toLowerCase();
        System.out.println("Lowercase string: " + lowercaseString);

        // Checking if two strings are equal
        String str3 = "Hello, World!";
        boolean isEqual = str.equals(str3);
        System.out.println("Are strings equal? " + isEqual);

        // Checking if a substring exists in a string
        String substring = "World";
        boolean containsSubstring = str.contains(substring);
        System.out.println("Does the string contain '" + substring + "'? " + containsSubstring);

        // Replacing a substring with another substring
        String replacedString = str.replace("World", "Universe");
        System.out.println("Replaced string: " + replacedString);

        // Splitting a string into an array of strings
        String[] splitString = str.split(",");
        System.out.println("Split string:");
        for (String s : splitString) {
            System.out.println(s);
        }
    }
}
